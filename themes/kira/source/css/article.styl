// ============================================
// Kira Hexo Theme - 文章内容样式
// ============================================

@import 'constants.styl';

// ============================================
// 文章主体样式
// ============================================

article {
	color: $text-secondary;
	font-family: microsoft yahei;

	p {
		line-height: 24px;
	}

	// ------------------------------------------
	// 代码块样式
	// ------------------------------------------
	.highlight {
		padding: 0 0.5em;
		background: $bg-code;
		color: #abb2bf;
		margin: $gutter 0;
		border-radius: $radius;
		overflow: auto;

		.gutter {
			border-right: 1px solid #35393b;
		}

		table {
			overflow: auto;
			display: block;

			&::-webkit-scrollbar {
				height: 6px;
			}

			&::-webkit-scrollbar-track {
				background: $bg-code;
			}

			&::-webkit-scrollbar-thumb {
				background: #777777;
				border-radius: 3px;
			}
		}
	}

	pre {
		border-radius: $radius;
		overflow: hidden;
		box-sizing: border-box;
		margin: 0;
		padding: 0 6px 0 0;
		position: relative;
		background: $bg-code;
		line-height: 18px;

		code {
			position: relative;
			border: none;
			border-radius: 0;
			font-size: 100%;
			font-family: Consolas;
		}

		.line {
			font-family: Consolas;
			line-height: 1em;
		}
	}

	// ------------------------------------------
	// 链接样式
	// ------------------------------------------
	a {
		transition: $transition-default;
		color: $color1;
		text-decoration: none;
		word-wrap: break-word;

		&::before {
			font-family: 'kirafont';
			content: '\ec7f\ ';
		}

		&:hover,
		&:focus {
			color: $color1;
			text-decoration: underline;
		}
	}

	// 标题锚点链接
	a.header-anchor {
		color: #ccc;
		text-decoration: none;
		margin-left: 8px;
		margin-right: 0;
		opacity: 0;
		transition: $transition-fast;
		order: 1;

		&::before {
			content: none;
		}

		&:hover {
			text-decoration: none;
			color: $color1;
		}
	}

	// ------------------------------------------
	// 段落样式
	// ------------------------------------------
	p {
		margin: $gutter 0;
		position: relative;

		&::after {
			content: '';
			clear: both;
			display: block;
		}
	}

	// ------------------------------------------
	// 行内代码
	// ------------------------------------------
	code {
		display: inline;
		border-radius: 4px;
		font-family: SFMono-Regular, Consolas, Liberation Mono, Menlo, Courier, monospace, Roboto,
			RobotoNum, 'PingFang SC', 'Hiragino Sans GB', 'Microsoft YaHei', 'Helvetica Neue', Helvetica,
			Arial, sans-serif, 'Segoe UI';
		padding: 0 4px;
		margin: 1px 3px;
		word-break: break-all;
		color: $color1;
		background-color: $krlbgc1;
	}

	del {
		color: $text-light;
		font-size: 0.9em;
	}

	// ------------------------------------------
	// 图片样式
	// ------------------------------------------
	img {
		display: block;
		border-radius: $radius;
		margin: 0 auto;

		&:not(.kira-post-cover-image) {
			cursor: pointer;
			transition: $transition-default;

			&:hover {
				box-shadow: 0 0 10px rgba($krlbgc1, 0.3);
				transform: scale(1.01, 1.01);
				border-radius: 0;
			}

			&:active {
				transform: scale(1, 1);
			}
		}

		// 懒加载状态
		&.lazyload,
		&.lazyloading {
			opacity: 0;
			transition: opacity 400ms ease-out;
		}

		&.lazyloaded {
			opacity: 1;
		}
	}

	// ------------------------------------------
	// 标题样式
	// ------------------------------------------
	h1, h2, h3, h4, h5, h6 {
		color: #111;
		margin: $gutter 0;
		display: flex;
		flex-direction: row-reverse;
		justify-content: flex-end;
		align-items: center;

		&:hover .header-anchor {
			opacity: 0.6;
		}
	}

	h4, h5, h6 {
		position: relative;

		&::before {
			display: inline-block;
			width: 1em;
			content: '#';
			color: $color1;
		}
	}

	h1 {
		font-size: 2.5em;
	}

	h2 {
		font-size: 1.7em;
		position: relative;
		padding-bottom: 10px;

		&::before {
			content: '';
			width: 100%;
			padding: 0 $gutter;
			border-bottom: 1px solid $border-color;
			position: absolute;
			bottom: -1px;
			left: -($gutter);
			box-sizing: unset;
		}

		&::after {
			transition: $transition-default;
			content: '';
			position: absolute;
			background: $color1;
			width: 1em;
			height: 5px;
			bottom: -3px;
			left: 0;
			border-radius: 10px;
		}

		&:hover::after {
			width: 2em;
		}
	}

	h3 {
		font-size: 1.3em;
	}

	h4 {
		font-size: 1.15em;
	}

	h5 {
		font-size: 1em;
	}

	h6 {
		font-size: 0.9em;
	}

	// ------------------------------------------
	// 引用块
	// ------------------------------------------
	blockquote {
		color: $text-muted;
		margin: $gutter 0;
		padding: 0.1em 2.2em;
		background-color: $bg-light;
		line-height: 28px;
		position: relative;
		border-radius: 10px;
		border: 1px solid $border-color;
		font-family: sf pro sc, sf pro display, sf pro icons, aos icons, pingfang sc, helvetica neue,
			helvetica, arial, sans-serif;

		&::before {
			content: '\201C';
			top: 15px;
			left: 10px;
			position: absolute;
			color: #888;
			font-size: 3em;
		}

		&::after {
			content: '\201D';
			bottom: -8px;
			right: 10px;
			position: absolute;
			color: #888;
			font-size: 3em;
		}
	}

	// ------------------------------------------
	// 分割线
	// ------------------------------------------
	hr {
		display: block;
		border: 0;
		border-top: 1px dashed #ccc;
		margin: $gutter 0;
		padding: 0;
	}

	// ------------------------------------------
	// 上下标
	// ------------------------------------------
	sub, sup {
		font-size: 75%;
		line-height: 0;
		position: relative;
		vertical-align: baseline;
	}

	sub {
		bottom: -0.25em;
	}

	sup {
		top: -0.5em;
	}

	// ------------------------------------------
	// 无序列表
	// ------------------------------------------
	ul {
		padding: 0 0 0 2em;
		margin-top: 0;
		list-style: none;
		padding-left: 0 !important;

		.mdui-checkbox {
			padding-left: 22px;
			height: 18px;
		}

		.mdui-checkbox-icon {
			top: 4px;
		}

		li {
			position: relative;
			padding: 10px 0;
			padding-left: 25px;
			line-height: 1rem;

			&::before {
				content: '';
				width: 10px;
				height: 10px;
				background: $color1;
				display: inline-block;
				vertical-align: middle;
				margin-right: 12px;
				margin-left: -26px;
				border-radius: 100%;
				border: 3px solid #fff;
				z-index: 3;
				position: relative;
			}

			&::after {
				content: '';
				height: 100%;
				width: 1.5px;
				background: $krlbgc1;
				position: absolute;
				left: 6.25px;
				top: 20px;
			}

			&:last-child::after {
				display: none;
			}
		}

		span {
			margin-right: 15px;
		}
	}

	// ------------------------------------------
	// 有序列表
	// ------------------------------------------
	ol {
		padding: 0 0 0 2.5em;
		margin-top: 0;
	}

	& > ol {
		list-style-type: none;
		counter-reset: item;

		& > li {
			position: relative;

			&::before {
				content: counter(item);
				counter-increment: item;
				position: absolute;
				top: 0.2rem;
				left: -2.5em;
				height: 1.6rem;
				width: 1.6rem;
				text-align: center;
				border-radius: 8px;
				line-height: 1.6rem;
				background-color: $krlbgc1;
				color: $color1;
			}
		}
	}

	li {
		line-height: 2rem;

		p {
			margin: 0 !important;
		}
	}

	dd {
		margin: 0 0 0 2em;
	}

	// ------------------------------------------
	// 表格样式
	// ------------------------------------------
	& > table {
		color: #5b6064;
		border-spacing: 0;
		border-collapse: collapse;
		max-width: 100%;
		overflow: auto;
		white-space: nowrap;
		margin: $gutter auto;
		background: transparent;
		display: block;

		thead {
			border-bottom: 1px solid $border-color;
			background-color: $bg-light;

			tr {
				background-color: $bg-light;
			}
		}

		th {
			border: 1px solid $border-color;
			padding: 13px 26px;
			font-weight: 400;
		}

		td {
			border: 1px solid $border-color;
			padding: 13px 26px;
		}

		tr {
			background-color: #fff;

			&:nth-child(2n) {
				background-color: $bg-light;
			}
		}
	}

	// ------------------------------------------
	// 媒体元素
	// ------------------------------------------
	img, canvas, iframe, video, svg, select, textarea {
		width: auto;
		max-width: 100%;
	}

	// ------------------------------------------
	// 键盘按键样式
	// ------------------------------------------
	kbd {
		display: inline-block;
		padding: 3px 5px;
		font: 1rem ui-monospace, SFMono-Regular, SF Mono, Menlo, Consolas, Liberation Mono, monospace;
		line-height: 10px;
		color: $text-secondary;
		vertical-align: middle;
		background-color: $bg-light;
		border: solid 1px #adb3b9;
		border-radius: 6px;
		box-shadow: inset 0 -1px 0 #e7e7e7;
	}

	// ------------------------------------------
	// 复选框样式
	// ------------------------------------------
	input[type='checkbox'] {
		margin-right: 0.25em;

		&::after {
			content: '✔';
			width: 1.25em;
			height: 1.25em;
			font-size: 0.8em;
			display: flex;
			justify-content: center;
			align-items: center;
			color: #fff;
			background-color: #ffffff;
			border: 1px solid #d9d9d9;
			border-radius: 0.25em;
			cursor: pointer;
		}

		&:disabled::after {
			cursor: not-allowed;
		}

		&:checked::after {
			border-color: $color1;
			background-color: $color1;
		}
	}
}

// ============================================
// Details 折叠面板样式
// ============================================

details {
	ul {
		padding-left: 1.7em;
	}

	&[open] > summary {
		.add {
			display: none;
		}
		.remove {
			display: inline-block;
		}
	}

	summary {
		cursor: pointer;

		i {
			margin-right: 0.3em;
			width: 24px;
		}

		.remove {
			display: none;
		}
	}

	.mdui-btn {
		background-color: $color1;
		color: #fff;
		border-radius: 10px;

		&:focus,
		&:active {
			background-color: $color1;
			color: #fff;
		}
	}
}


