// ============================================
// Kira Hexo Theme - 全局样式常量
// ============================================

// 布局相关
$gutter = 25px;
$radius = 13px;

// 文字颜色
$text-primary = #363636;
$text-secondary = #444;
$text-muted = #666;
$text-light = #999;
$text-lighter = #9ca2a8;

// 边框与背景
$border-color = #eee;
$bg-light = #f8f8f8;
$bg-code = #282c34;

// 阴影
$shadow-light = 0 0 5px 0 rgba(0, 0, 0, 0.18);

// 过渡动画
$transition-default = all 0.35s ease-out;
$transition-fast = all 0.2s ease;

// 导入主题颜色
@import 'color.styl';
