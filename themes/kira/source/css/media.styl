// 响应式布局
@media (max-width: 1400px) {
	.kira-right-column {
		width: 220px;
		min-width: 220px;
	}
}

@media (max-width: 1180px) {
	.kira-sidebar {
		left: 0;
	}

	.kira-content {
		margin-right: auto;
	}

	.kira-right-column {
		position: fixed;
		top: auto;
		bottom: 0;
		right: 0;
		width: 80px;
		min-width: 80px;
		height: auto;
		padding: 0;
		flex-direction: column;
		justify-content: flex-end;

		.kira-toc {
			display: none;
		}

		.kira-backtotop {
			background-color: rgba(255, 255, 255, 1);
			margin: 15px;
		}
	}
}


@media (max-width: 1000px) {
	body {
		height: fit-content;
		overflow: auto;

		.kira-header {
			height: 60px;
			width: 100%;
			padding-left: 10px;
			display: flex;
			align-items: center;
			justify-content: space-between;
			position: fixed;
			z-index: 4;
			box-sizing: border-box;
			overflow: hidden;
			background-color: transparent;
			transition: height 0.2s cubic-bezier(0.65, 0.05, 0.36, 1), background-color 0.2s ease;

			a {
				width: 45px;
				height: 45px;
				text-align: center;
				border-radius: 50%;
				transition: all 0.5s ease;

				i {
					font-size: 25px;
					line-height: 45px;
				}
				img {
					width: 100%;
					height: 100%;
					border-radius: 50%;
				}

				&:hover {
					background-color: rgba(0, 0, 0, 0.16);
				}
			}
		}

		.kira-header-placeholder {
			height: 60px;
			display: flex;
			position: relative;
		}

		.kira-body {
			height: fit-content;
			overflow: visible;

			.kira-sidebar {
				position: fixed;
				top: 0;
				left: 0;
				z-index: 16;
				transform: translateX(-100%);
				background-color: white;

				&.show {
					transform: translateX(0%);
					width: calc(100% - 56px);
				}

				&-modal.show {
					pointer-events: auto;
					background-color: rgba(0, 0, 0, 0.4);
				}
			}

			.kira-content {
				#kira-top-header {
					top: calc(-2vh - 80px);
				}

				margin-right: unset;
				max-width: 100vw;
				margin-top: 0;
			}
		}
	}
}

@media (max-width: 756px) {
	.kira-archives .categories {
		grid-template-columns: repeat(2, 98% / 2);
		grid-column-gap: 2%;
	}
}

@media (max-width: 400px) {
	.kira-archives .categories {
		grid-template-columns: repeat(1, 100%);
	}
}
